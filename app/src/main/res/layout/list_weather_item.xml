<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_height"
        android:background="#808080"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/textview_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day"
            android:textSize="@dimen/heading_size"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imageview_day"
            android:layout_width="@dimen/search_height"
            android:layout_height="@dimen/search_height"
            android:layout_marginLeft="8dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_height"
        android:background="#F2F2F2"
        android:gravity="center"
        android:text="Temperature (in Celcius)"
        android:textSize="@dimen/heading_size"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/textview_day_temp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Day"/>

        <TextView
            android:id="@+id/textview_min_temp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Min"/>

        <TextView
            android:id="@+id/textview_max_temp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Max"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/textview_morn_temp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Morning"/>

        <TextView
            android:id="@+id/textview_eve_temp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Evening"/>

        <TextView
            android:id="@+id/textview_night_temp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Night"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textview_pressure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_height"
        android:background="#F2F2F2"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:text="Pressure"
        android:textSize="@dimen/heading_size"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textview_humidity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_height"
        android:background="#F2F2F2"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:text="Humidity"
        android:textSize="@dimen/heading_size"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textview_windspeed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_height"
        android:background="#F2F2F2"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:text="Wind Speed"
        android:textSize="@dimen/heading_size"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textview_winddir"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_height"
        android:background="#F2F2F2"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:text="Wind Direction"
        android:textSize="@dimen/heading_size"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textview_cloudiness"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_height"
        android:background="#F2F2F2"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:text="Cloudiness"
        android:textSize="@dimen/heading_size"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textview_rain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_height"
        android:background="#F2F2F2"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:text="Rain"
        android:textSize="@dimen/heading_size"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textview_snow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_height"
        android:background="#F2F2F2"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:text="Snow"
        android:textSize="@dimen/heading_size"
        android:textStyle="bold"/>

</LinearLayout>